{
  "manifest_version": 3,
  "name": "Bookmark ChatGPT Answers",
  "version": "1.0.0",
  "description": "This extension allows you to bookmark ChatGPT answers and easily navigate back to them.",
  "action": {
    "default_title": "",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "icons": {
    "48": "palette.png",
    "128": "palette.png"
  },
  "permissions": ["scripting", "storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["/content.js"],
      "run_at": "document_idle"
    }
  ]
}
